<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.dao.StudentMapperExt">
  <select id="selectStudentByName" parameterType="java.lang.String" resultType="com.spring.entity.Student">
		SELECT *
		FROM student
		WHERE 1 = 1
		<if test="name != null and name !=''">
		    AND name = #{name,jdbcType=VARCHAR}
		</if>
	</select>
</mapper>